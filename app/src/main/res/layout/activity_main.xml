<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="201dp">

        </ListView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginTop="40px"
        android:text="Tambah Transaksi"
        android:textSize="60px"
        android:padding="20px"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="5px"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical">


                    <!--            Id Transaksi-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:text="Id Transaksi"
                        android:textColor="@color/primary" />

                    <EditText
                        android:id="@+id/txtTransaksi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2px"
                        android:hint="TR-001"
                        android:textSize="49px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Help Text"
                        android:textColor="@color/gray" />


                    <!--           Tanggal Transaksi -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="Tanggal Transaksi"
                        android:textColor="@color/primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtDate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="45px"
                            android:text="1 JAN 2023" />

                        <Button
                            android:id="@+id/btnDatePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-20px"
                            android:background="@color/info"
                            android:text="Set Date"
                            android:textColor="@color/white" />
                    </LinearLayout>


                    <!--            Keterangan-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="Keterangan"
                        android:textColor="@color/primary" />

                    <EditText
                        android:id="@+id/txtKeterangan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2px"
                        android:hint="TR-001"

                        android:textSize="49px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Help Text"
                        android:textColor="@color/gray" />

                    <!--            Debet-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="Debet"
                        android:textColor="@color/primary" />

                    <EditText
                        android:id="@+id/txtDebet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2px"
                        android:hint="0"
                        android:inputType="number"
                        android:textSize="49px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"
                        android:textColor="@color/gray" />

                    <!--            Kredit-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="Kredit"
                        android:textColor="@color/primary" />

                    <EditText
                        android:id="@+id/txtKredit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2px"
                        android:hint="0"
                        android:inputType="number"
                        android:textSize="49px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kredit"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="40px"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginBottom="50px">

                    <Button
                        android:id="@+id/btnTambah"
                        android:layout_width="500px"
                        android:layout_height="wrap_content"
                        android:text="Tambah" />

                    <Button
                        android:id="@+id/btnLaporan"
                        android:onClick="laporan"
                        android:layout_width="500px"
                        android:layout_marginLeft="10px"
                        android:layout_height="wrap_content"
                        android:text="Laporan" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>







</LinearLayout>